{
    // Builtin Settings
    // Window Settings
    "window.dialogStyle": "custom",
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "compact",
    "window.customMenuBarAltFocus": false,
    "window.enableMenuBarMnemonics": false,

    // Workbench Settings
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Atom One Dark",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.productIconTheme": "material-product-icons",
    "workbench.panel.opensMaximized": "never",
    "workbench.activityBar.location": "top",
    "workbench.editor.showTabs": "single",
    "workbench.editor.limit.value": 1,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.layoutControl.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.tips.enabled": false,

    // Activity Settings
    "breadcrumbs.filePath": "off",
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.excludeGitIgnore": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "outline.collapseItems": "alwaysCollapse",
    "search.collapseResults": "alwaysCollapse",
    "extensions.closeExtensionDetailsOnViewChange": true,

    // Editor Settings
    "editor.suggest.preview": true,
    "editor.suggest.localityBonus": true,
    "editor.guides.bracketPairs": "active",
    "editor.fontFamily": "FiraCode Nerd Font",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnSave": true,
    "editor.fontLigatures": true,
    "editor.linkedEditing": true,
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit"
    },

    // File Settings
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "files.trimTrailingWhitespace": true,

    // Debugger Settings
    "debug.console.closeOnEnd": true,
    "debug.enableStatusBarColor": false,
    "debug.hideLauncherWhileDebugging": true,
    "debug.console.historySuggestions": false,
    "debug.terminal.clearBeforeReusing": true,
    "debug.showBreakpointsInOverviewRuler": true,
    "debug.inlineValues": "on",
    "debug.openDebug": "neverOpen",
    "debug.showInStatusBar": "never",
    "debug.toolBarLocation": "commandCenter",
    "debug.console.acceptSuggestionOnEnter": "on",
    "debug.internalConsoleOptions": "openOnSessionStart",

    // Terminal Settings
    "terminal.external.linuxExec": "kgx",
    "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.smoothScrolling": true,

    // Extension Settings
    // Git Settings
    "git.smartCommitChanges": "tracked",
    "git.closeDiffOnOperation": true,
    "git.enableSmartCommit": true,
    "git.mergeEditor": true,

    // Prettier Settings
    "prettier.tabWidth": 4,

    // Code Spell Settings
    "cSpell.language": "en-GB, en",

    // Hungry Delete Settings
    "hungryDelete.keepOneSpace": true,
    "hungryDelete.enableSmartBackspace": false,

    // Projects Settings
    "projectManager.git.baseFolders": ["~/Documents/Codebase"],

    // Path Intellisense Settings
    "javascript.suggest.paths": false,
    "typescript.suggest.paths": false,

    // Language Settings
    // Python Settings
    "python.analysis.importFormat": "relative",
    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.fixAll": ["source.unusedImports"],
    "black-formatter.args": ["--line-length", "78"],
    "isort.args": ["--profile", "black"],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.rulers": [72, 78]
    },

    // Other Settings
    // Highlighting Settings
    "editor.semanticTokenColorCustomizations": {
        "[Atom One Dark]": {
            // Atom One Colours
            // Black - #282c34
            // Grey - #5c6370
            // White - #abb2bf
            // Red - #e06c75
            // Blue - #61afef
            // Cyan - #56b6c2
            // Green - #98c379
            // Purple - #c678dd
            // Orange - #d19a66
            // Yellow - #e5c07b

            "enabled": true,
            "rules": {
                "keyword": "#c678dd",
                "operator": "#c678dd",

                "number": "#d19a66",
                "string": "#98c379",

                "builtinConstant": "#d19a66",

                "variable": "#abb2bf",
                "variable.readonly": { "italic": true },
                "variable.builtin": {
                    "foreground": "#e06c75",
                    "italic": true
                },
                "variable.typeHint": {
                    "foreground": "#56b6c2",
                    "italic": true
                },

                "property": "#abb2bf",
                "property.builtin": {
                    "foreground": "#e06c75",
                    "italic": true
                },
                "property.typeHint": {
                    "foreground": "#56b6c2",
                    "italic": true
                },

                "enumMember": {
                    "foreground": "#abb2bf",
                    "italic": true
                },
                "enumMember.builtin": {
                    "foreground": "#e06c75",
                    "italic": true
                },
                "enumMember.typeHint": {
                    "foreground": "#56b6c2",
                    "italic": true
                },

                "parameter": "#d19a66",
                "selfParameter": "#e06c75",
                "clsParameter": "#e06c75",

                "function": "#61afef",
                "function.async": { "italic": true },
                "function.decorator": "#61afef",
                "function.declaration": { "bold": true },

                "method": "#61afef",
                "method.static": "#56b6c2",
                "method.abstract": "#56b6c2",
                "method.decorator": "#61afef",
                "method.async": { "italic": true },
                "method.declaration": { "bold": true },
                "magicFunction": "#56b6c2",

                "class": "#e5c07b",
                "class.builtin": "#56b6c2",
                "class.decorator": "#61afef",
                "class.declaration": { "bold": true },
                "class.typeHint": {
                    "foreground": "#56b6c2",
                    "italic": true
                },

                "enum": "#e5c07b",
                "enum.decorator": "#61afef",
                "enum.declaration": { "bold": true },
                "enum.typeHint": {
                    "foreground": "#56b6c2",
                    "italic": true
                },

                "module": {
                    "foreground": "#e5c07b",
                    "italic": true
                },
                "module.typeHint": "#56b6c2",
                "module.decorator": "#61afef"
            }
        }
    }
}
